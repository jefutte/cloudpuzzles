{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newZoneName": {
      "type": "string",
      "metadata": {
          "description": "The name of the DNS zone to be created."
      }
    },
    "msRecord": {
      "type": "string",
      "metadata": {
          "description": "The value of your TXT record. Example: MS=ms12345678."
      }
    }
  },
  "resources": 
  [
    {
      "type": "microsoft.network/dnszones",
      "name": "[parameters('newZoneName')]",
      "apiVersion": "2015-05-04-preview",
      "location": "global",
      "properties": {
      }
    },
    {
      "location": "global",
      "tags": {},
      "properties": {
         "TTL": 3600,
         "TXTRecords": [
             {
                "value": "[parameters('msRecord')]"
             }
         ]
      }
    },
    {
      "location": "global",
      "name": "sip",
      "tags": {},
      "properties": {
         "TTL": 3600,
         "CNAMERecord": {
             "cname": "sipdir.online.lync.com"
         }
      }
    },
    {
      "location": "global",
      "name": "lyncdiscover",
      "tags": {},
      "properties": {
         "TTL": 3600,
         "CNAMERecord": {
             "cname": "webdir.online.lync.com"
         }
      }
    },
    {
      "location": "global",
      "name": "msoid",
      "tags": {},
      "properties": {
         "TTL": 3600,
         "CNAMERecord": {
             "cname": "clientconfig.microsoftonline-p.net"
         }
      }
    },
    {
      "location": "global",
      "name": "enterpriseregistration",
      "tags": {},
      "properties": {
         "TTL": 3600,
         "CNAMERecord": {
             "cname": "enterpriseregistration.windows.net"
         }
      }
    },
    {
      "location": "global",
      "name": "enterpriseenrollment",
      "tags": {},
      "properties": {
         "TTL": 3600,
         "CNAMERecord": {
             "cname": "enterpriseenrollment.manage.microsoft.com"
         }
      }
    },
    {
      "location": "global",
      "tags": {},
      "properties": {
         "TTL": 3600,
         "SRVRecords": [
             {
                "priority": 100,
                "weight": 1,
                "port": 443,
                "target": "sipdir.online.lync.com"
             },
             {
                "priority": 100,
                "weight": 1,
                "port": 5061,
                "target": "sipfed.online.lync.com"
             }
         ]
      }
    }
  ]
}